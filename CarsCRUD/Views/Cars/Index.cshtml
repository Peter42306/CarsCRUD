@model IEnumerable<CarsCRUD.Models.Car>

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Bootstrap Example</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>	
</head>
<body>
	<div class="container-fluid">
		<h3>Cars List</h3>
		<a class="btn btn-outline-info mb-3" asp-action="Create">Create New Item</a>

		<div class="table-responsive">
			<table class="table table-hover w-100">
				<thead>
					<tr>
						<th>Id</th>
						<th>Manufacturer</th>
						<th>Model</th>
						<th>Year</th>
						<th>Price</th>
						<th>Brief description</th>
						<th>Availability</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Manufacturer</td>
							<td>@item.Model</td>
							<td>@item.Year</td>
							<td>@item.Price</td>
							<td>@item.Description</td>
							<td>@(item.IsAvailable ? "In Stock" : "Out of Stock")</td>
							<td>
								<a class="btn btn-outline-info mb-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
								<a class="btn btn-outline-info mb-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
								<a class="btn btn-outline-info mb-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>		
	</div>
</body>
</html>